@model StreetFighter.Web.Models.FichaTecnicaModel

@{ 
    ViewBag.Title = "FichaTecnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="descricao-conteudo">
    <h1>@ViewBag.Title</h1>
</div>
<div class="conteudo-corpo">
    <h1>@Model.Nome</h1>
    <div class="coluna">
        <img src="~/Content/Images/Blanka.png" alt="Blanka pulando ferozmente" class="img-artigo">
    </div>
    <div class="coluna">
        <p>
            <strong>Nascimento:</strong>@Model.DataNascimento
            <br>
            <strong>Altura:</strong> @Model.Altura cm.
            <br>
            <strong>Peso:</strong> @Model.Peso kg.
            
            <strong>Origem:</strong> @Model.Origem .
            <br>
            <strong>Golpes especiais famosos:</strong> @Model.GolpesEspeciais .
        </p>
    </div>

</div>

